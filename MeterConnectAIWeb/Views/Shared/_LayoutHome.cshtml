<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <style>
        body {
            margin: 0;
            overflow: hidden;
            background-color: #1a1a2e; /* OpenAI 風格的深灰色背景 */
            color: #e0e0e0; /* 較亮的文字顏色 */
            font-family: Arial, sans-serif;
        }

        #backplane {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            background-color: #162447; /* 偏藍色的深色背景 */
        }

        #slide-menu {
            height: 100vh;
            width: 30vw;
            position: absolute;
            color: #e0e0e0;
            background-color: #1b1b3a; /* 深藍色，與主背景稍微區分 */
            left: -30vw;
            z-index: 4;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.5); /* 添加陰影來突顯選單 */
        }

        #menu-content {
            width: 2vw;
            height: 2vw;
            padding: 20px;
            z-index: 999;
            position: absolute;
        }

        #menu-trigger {
            width: 100%;
            height: 100%;
            font-size: 30px;
            color: #e0e0e0;
            position: absolute;
            border-radius: 10px;
            background-color: #4f5d75;
            border: none;
            cursor: pointer;
        }

        #ReBody {
            position: absolute;
            top: 8vw;
            left: 5vw;
            right: 5vw; 
            padding: 50px;
            border-radius: 20px;
            background-color: #1f4068;
            color: #f0f0f0;
            font-style: italic;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            z-index: 5;
        }


        nav ul li {
            padding: 10px 20px;
            font-size: 1.2em;
            border-bottom: 1px solid #4a4a6a;
            cursor: pointer;
            list-style-type: none;
        }

            nav ul li a {
                display: block;
                color: inherit;
                text-decoration: none;
            }

            nav ul li:hover {
                background-color: #4f5d75;
                color: #ffffff;
            }

    </style>

</head>

<body>
    <div id="backplane">
        <div id="menu-content">
            <button id="menu-trigger" class="menu-trigger" onclick="buttonfun()">
                <i class="fa fa-bars" aria-hidden="true"></i>
            </button>
        </div>
        <div id="ReBody">@RenderBody()</div>
    </div>

    <!-- Slide Menu -->
    <nav id="slide-menu">
        <ul class="list-unstyled">
            <li><a href="@Url.Action("Home", "Home")">Home</a></li>
            <li><a href="@Url.Action("Home", "Home")">Dashboard</a></li>
            <li><a href="@Url.Action("Home", "Home")">Profile</a></li>
            <li><a href="@Url.Action("Home", "Home")">Settings</a></li>
            <li><a href="@Url.Action("Home", "Home")">Logout</a></li>
        </ul>
    </nav>


    <!-- jQuery, Chart.js, and Bootstrap Bundle JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

    <script>
        let isRight = false;
        console.log("Triggered animation");
        console.log($('#backplane'));
        function buttonfun() {
            if (isRight) {
                $('#backplane').animate({ left: '0px' }, 500);
                $('#slide-menu').animate({ left: '-30vw' }, 500);
            } else {
                $('#backplane').animate({ left: '30vw' }, 500);
                $('#slide-menu').animate({ left: '0px' }, 500);
            }
            isRight = !isRight;
        }
    </script>
</body>
</html>
