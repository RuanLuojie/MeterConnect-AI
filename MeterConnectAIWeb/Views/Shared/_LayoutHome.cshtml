<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyApp</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    
    <style>
        body {
            margin: 0;
            background-color: #1a1a2e;
            color: #e0e0e0;
            font-family: Arial, sans-serif;
        }

        #sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            background-color: #1b1b3a;
            width: 250px;
            transition: width 0.3s;
            overflow: hidden;
            z-index: 1000;
        }

            #sidebar.collapsed {
                width: 80px;
            }

            #sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                #sidebar ul li {
                    padding: 15px 20px;
                }

                    #sidebar ul li a {
                        color: #e0e0e0;
                        text-decoration: none;
                        display: flex;
                        align-items: center;
                    }

                        #sidebar ul li a i {
                            margin-right: 10px;
                            font-size: 18px;
                        }

                        #sidebar ul li a span {
                            transition: opacity 0.3s, width 0.3s;
                            overflow: hidden;
                            display: inline-block;
                        }

            #sidebar.collapsed ul li a span {
                opacity: 0;
                width: 0;
            }

        #content {
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

        #sidebar.collapsed ~ #content {
            margin-left: 80px;
        }

        #toggle-btn {
            position: relative;
            top: 0;
            left: 0;
            background-color: #4f5d75;
            color: #ffffff;
            border: none;
            border-radius: 4px;
            padding: 5px 10px;
            cursor: pointer;
            z-index: 1100;
            margin-bottom: 15px;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div id="sidebar">
        <ul>
            <li>
                <a asp-action="Home" asp-controller="Home">
                    <i class="fas fa-home"/></i>
                    <span>Home</span>
                </a>
            </li>
            <li>
                <a asp-action="Dashboard" asp-controller="Home">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-action="Home" asp-controller="Home">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </a>
            </li>
            <li>
                <a asp-action="Home" asp-controller="Home">
                    <i class="fas fa-cogs"></i>
                    <span>Settings</span>
                </a>
            </li>
            <li>
                <a asp-action="Home" asp-controller="Home">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- Content -->
    <div id="content">
        <button id="toggle-btn"><i class="fas fa-bars"></i></button>
        @RenderSection("breadcrumb_section", required: false)


        <!-- Render Body Content -->
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- JavaScript for Sidebar Toggle -->
    <script src="~/highcharts/highcharts.js"></script>
    <script src="~/highcharts/themes/brand-dark.min.js"></script>
    <script>
        const toggleBtn = document.getElementById('toggle-btn');
        const sidebar = document.getElementById('sidebar');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
        });
    </script>
    @RenderSection("js_section", required: false)

</body>
</html>
